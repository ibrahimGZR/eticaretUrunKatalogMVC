


    <ul class="navbar-nav  my-2 my-lg-0">

        @if (Request.IsAuthenticated)
        {

            if (User.IsInRole("admin"))
            {
                if (HttpContext.Current.Request.Url.AbsolutePath == "/Order" || 
                    HttpContext.Current.Request.Url.AbsolutePath == "/Category" ||
                    HttpContext.Current.Request.Url.AbsolutePath == "/Product")
                {
                    //kullanıcı adını ve logout linklerini çıkar
                    <li class="nav-item active">
                        <a class="nav-link" href="#">@User.Identity.Name</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="/Home">Site</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="/Account/Logout">Logout</a>
                    </li>
                }
                else
                {
                    //kullanıcı adını ve logout linklerini çıkar
                    <li class="nav-item active">
                        <a class="nav-link" href="/Account">@User.Identity.Name</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="/Order">Panel</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="/Account/Logout">Logout</a>
                    </li>
                }

            }
            else
            {
                //kullanıcı adını ve logout linklerini çıkar
                <li class="nav-item active">
                    <a class="nav-link" href="/Account">@User.Identity.Name</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="/Account/Logout">Logout</a>
                </li>
            }

        }
        else
        {
            //login ve register linkleri çıkar
            <li class="nav-item active">
                <a class="nav-link" href="/Account/Login">Login</a>
            </li>
            <li class="nav-item active">
                <a class="nav-link" href="/Account/Register">Register</a>
            </li>
        }






    </ul>